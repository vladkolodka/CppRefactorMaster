<Window x:Class="CppRefactorMaster.MagicNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Magic number" Height="273.259" Width="213.928" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Magic number" Grid.Row="0" FontFamily="Segoe UI Black" HorizontalAlignment="Center" FontSize="16"/>
        <TextBox Text="number" Grid.Row="1" TabIndex="0" x:Name="Number" GotFocus="Field_OnGotFocus" FontSize="16" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Text="const_name" Grid.Row="2" TabIndex="1" x:Name="ConstName" GotFocus="Field_OnGotFocus" FontSize="16" TextAlignment="Center" VerticalContentAlignment="Center"/>

        <Button Content="Create constants" Grid.Row="3" TabIndex="3" Click="ActionButton_OnClick" FontSize="20"/>

    </Grid>
</Window>
